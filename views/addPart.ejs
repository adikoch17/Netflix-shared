<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../partials/header') -%>
</head>
<body class="flex-center" style="justify-content: flex-start;">
    <div class="nav">
        <a href="" id="home"><i>back</i></a>
        <a href="/">log out</a>
    </div>
    <div style="margin-top: 4rem;width:80%;min-width:310px;">
        <form action="POST">
            <label for="partId">participant id</label><br>
            <input type="text" name="partId" id="partId"><br><br>
            <button id="addP">Add participant</button>
        </form>
    </div>
    <script>
        $("#home").click(function (e) { 
            e.preventDefault();
            window.location.replace(`/home:${getCookie("id")}`)
        });
        $("#addP").click(function (e) { 
            e.preventDefault();
            fetch("http://localhost:3000/addParticipant",{
                method:"POST",
                headers:{
                    "Content-type":"application/json"
                },
                body:JSON.stringify({host:getCookie("email"),part:$("#partId").val()})
            })
        });
    </script>
</body>
</html>